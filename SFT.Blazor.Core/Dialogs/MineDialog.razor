<MudDialog>
    <DialogContent>
        <MudForm @ref="form" @bind-IsValid="isValid">
            <MudTextField @bind-Value="name" Label="Mine Name" Required="true" RequiredError="Name is required." Class="mb-3" data-test-id="mine-dialog-name" />
            <div data-test-id="mine-dialog-resource">
                <MudAutocomplete T="Resource" @bind-Value="selectedResource" Label="Resource" Required="true" RequiredError="Resource is required." Class="mb-3"
                                 SearchFunc="SearchResources" ToStringFunc="@(r => r?.Name ?? string.Empty)" CoerceText="false"
                                 OpenOnFocus="true" MinCharacters="0" />
            </div>
            <div data-test-id="mine-dialog-node-purity">
                <MudSelect @bind-Value="nodePurity" Label="Node Purity" Required="true">
                    <MudSelectItem Value="0">Impure (0.5×)</MudSelectItem>
                    <MudSelectItem Value="1">Normal (1×)</MudSelectItem>
                    <MudSelectItem Value="2">Pure (2×)</MudSelectItem>
                </MudSelect>
            </div>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" data-test-id="mine-dialog-cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit" data-test-id="mine-dialog-submit">@(Mine is null ? "Add" : "Save")</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter] public Mine? Mine { get; set; }
    [Parameter] public IReadOnlyList<Resource> Resources { get; set; } = [];

    private MudForm form = null!;
    private bool isValid;
    private string name = string.Empty;
    private Resource? selectedResource;
    private int nodePurity = 1;

    protected override void OnParametersSet()
    {
        if (Mine is not null)
        {
            name = Mine.Name;
            selectedResource = Resources.FirstOrDefault(r => r.Id == Mine.ResourceId);
            nodePurity = Mine.NodePurity;
        }
    }

    private Task<IEnumerable<Resource>> SearchResources(string value, CancellationToken token)
    {
        if (string.IsNullOrEmpty(value))
            return Task.FromResult<IEnumerable<Resource>>(Resources.ToList());
        return Task.FromResult<IEnumerable<Resource>>(Resources.Where(r => r.Name.Contains(value, StringComparison.OrdinalIgnoreCase)).ToList());
    }

    private async Task Submit()
    {
        await form.Validate();
        if (!isValid || selectedResource is null) return;

        var resourceId = selectedResource.Id;
        var result = Mine is null
            ? new Mine { Name = name, ResourceId = resourceId, NodePurity = nodePurity }
            : new Mine { Id = Mine.Id, Name = name, ResourceId = resourceId, NodePurity = nodePurity };

        MudDialog.Close(DialogResult.Ok(result));
    }

    private void Cancel() => MudDialog.Cancel();
}
